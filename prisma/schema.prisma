// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SpotifyAuthorisationCodes {
  id   Int    @id @default(autoincrement())
  code String
}

model SpotifyConnections {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiresAt    DateTime
}

model TidalConnections {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String
  userId       Int
  expiresAt    DateTime
}
